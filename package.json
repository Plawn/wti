{
  "name": "wti",
  "version": "0.1.0",
  "private": true,
  "description": "WTI - What The Interface: A modern Swagger UI alternative",
  "author": "plawn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plawn/wti.git"
  },
  "homepage": "https://github.com/plawn/wti#readme",
  "bugs": {
    "url": "https://github.com/plawn/wti/issues"
  },
  "keywords": [
    "openapi",
    "swagger",
    "api",
    "documentation",
    "grpc",
    "solidjs",
    "rest",
    "api-explorer"
  ],
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run --filter @wti/demo dev",
    "build": "bun run --filter './packages/*' build",
    "build:demo": "bun run --filter @wti/demo build",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "2.0.13",
    "typescript": "^5.7.2"
  }
}
