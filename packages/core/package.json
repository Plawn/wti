{
  "name": "@wti/core",
  "version": "0.1.0",
  "description": "Core logic for WTI - OpenAPI/gRPC parsing, HTTP client, code generation",
  "author": "plawn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plawn/wti.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/plawn/wti#readme",
  "keywords": ["openapi", "grpc", "api", "parser", "http-client", "codegen"],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./openapi": {
      "types": "./dist/openapi/index.d.ts",
      "import": "./dist/openapi/index.js"
    },
    "./grpc": {
      "types": "./dist/grpc/index.d.ts",
      "import": "./dist/grpc/index.js"
    },
    "./http": {
      "types": "./dist/http/index.d.ts",
      "import": "./dist/http/index.js"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.ts",
      "import": "./dist/codegen/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@bufbuild/protobuf": "2.10.2",
    "@connectrpc/connect-web": "2.1.1",
    "ajv": "8.17.1",
    "openapi-types": "12.1.3",
    "yaml": "2.8.2"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/bun": "^1.1.14"
  },
  "files": ["dist", "src"]
}
